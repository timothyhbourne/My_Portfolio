extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back
    //- a.nextproject(href=`/project0`)
    //-   |  Next Project
    //-   span  &rarr;

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1 #{project_name}

        p.project-desc #{description}

      .project-tech-links-box.box
        h6 Technologies
        ul

          each technology in technology_used
            li= technology

        a.btn-link(href=`${live_link}` target='_blank') Try This Project!
        a.btn-link(href=`${github_link}` target="_blank") GitHub Repo

    .project-img-box.box

      img.project-img(src=`${image_urls[1]}`, alt='')
      img.project-img(src=`${image_urls[2]}`, alt='')
      img.project-img(src=`${image_urls[3]}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
